generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  role      Role     @default(VIEWER)
  auditLogs AuditLog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  BD
  CAPTURE
  PROPOSAL
  VIEWER
}

model AuditLog {
  id        String   @id @default(uuid())
  event     String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  metadata  Json?
  timestamp DateTime @default(now())
}
